<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="orders" class="com.hbl.spring5.ioc.BeanBaseOnXML.BeanLive.Orders" init-method="initMethod" destroy-method="destroyMethod">
    <property name="oname" value="手机"></property>
   </bean>

    <!--//配置后置处理器 - 会对当前配置文件的bean都添加后置处理器-->
    <bean id="myPost" class="com.hbl.spring5.ioc.BeanBaseOnXML.BeanLive.MyBeanPost"></bean>
</beans>